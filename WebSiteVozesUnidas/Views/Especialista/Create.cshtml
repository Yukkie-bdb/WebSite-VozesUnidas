@model WebSiteVozesUnidas.Models.Especialista

@{
    ViewData["Title"] = "Criar";
}

<h2 style="text-align:center; margin-top:10px">Criar Novo Especialista</h2>

<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Especialhidade" class="control-label"></label>
                <input asp-for="Especialhidade" class="form-control" />
                <span asp-validation-for="Especialhidade" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ImgEspecialista" class="control-label"></label>
                <input asp-for="ImgEspecialista" type="file" name="ImgUp" class="form-control" />
                <span asp-validation-for="ImgEspecialista" class="text-danger"></span>
            </div>
            <div style="display:flex; flex-direction:column; justify-content: center; align-items: center">
                <button type="submit" value="Criar" style="margin-bottom:10px; border-radius:10px; border: solid; border-width: 1px; background-color:#FFFFFF; align-items:center; width:250px; height:40px">
                    Criar
                </button>
                <a style="color:black;text-align:center; align-items:center; width:200px" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
