@model WebSiteVozesUnidas.Models.AvaliacaoEspecialista

@{
    ViewData["Title"] = "Criar";
}

<h2 style="text-align:center; margin-top:10px">Criar Avaliação</h2>

<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Estrelas" class="control-label"></label>
                <input asp-for="Estrelas" class="form-control" />
                <span asp-validation-for="Estrelas" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EspecialistaId" class="control-label"></label>
                <select asp-for="EspecialistaId" class ="form-control" asp-items="ViewBag.EspecialistaId"></select>
            </div>
            <div style="display:flex; flex-direction:column; justify-content: center; align-items: center">
                <button type="submit" value="Criar" style="margin-bottom:10px; border-radius:10px; border: solid; border-width: 1px; background-color:#FFFFFF; align-items:center; width:250px; height:40px">
                    Criar
                </button>
                <a style="color:black;text-align:center; align-items:center; width:200px" asp-action="Index" asp-controller="Especialista">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
