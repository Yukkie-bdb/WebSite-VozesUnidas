        <div class="row mb-3">
            <div class="col-3">
                <div class="input-group">
                    <label asp-for="Requisitos" class="input-group-text"></label>
                    <input asp-for="Requisitos" class="form-control" />
                    <span asp-validation-for="Requisitos" class="text-danger"></span>
                </div>
            </div>
            <div class="col-3">
                <div class="input-group">
                    <label asp-for="RegimeContratacao" class="input-group-text"></label>
                    <input asp-for="RegimeContratacao" class="form-control" />
                    <span asp-validation-for="RegimeContratacao" class="text-danger"></span>
                </div>
            </div>
            <div class="col-3">
                <div class="input-group">
                    <label asp-for="DescricaoVaga" class="input-group-text"></label>
                    <input asp-for="DescricaoVaga" class="form-control" />
                    <span asp-validation-for="DescricaoVaga" class="text-danger"></span>
                </div>
            </div>
            <div class="col-3">
                <div class="input-group">
                    <label asp-for="Salario" class="input-group-text"></label>
                    <input asp-for="Salario" class="form-control" />
                    <span asp-validation-for="Salario" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-3">
                <div class="input-group">
                    <label asp-for="Estado" class="input-group-text"></label>
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>
            <div class="col-3">
                <div class="input-group">
                    <label asp-for="Cidade" class="input-group-text"></label>
                    <input asp-for="Cidade" class="form-control" />
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>
            </div>
            <div class="col-3">
                <div class="input-group">
                    <label asp-for="Publicacao" class="input-group-text"></label>
                    <input asp-for="Publicacao" class="form-control" />
                    <span asp-validation-for="Publicacao" class="text-danger"></span>
                </div>
            </div>
            <div class="col-3">
                <div class="input-group">
                    <label asp-for="UsuarioId" class="input-group-text"></label>
                    <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                    <span asp-validation-for="UsuarioId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>


