                    <label asp-for="HorarioExpediente" class="input-group-text"></label>
                    <input asp-for="HorarioExpediente" class="form-control" />
                    <span asp-validation-for="HorarioExpediente" class="text-danger"></span>
                </div>
            </div>
            <div class="col-3">
                <div class="input-group">
                    <label asp-for="Beneficios" class="input-group-text"></label>
                    <input asp-for="Beneficios" class="form-control" />
                    <span asp-validation-for="Beneficios" class="text-danger"></span>
                </div>
            </div>
