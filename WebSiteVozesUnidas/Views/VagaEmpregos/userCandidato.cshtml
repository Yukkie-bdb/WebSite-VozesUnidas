@model IEnumerable<WebSiteVozesUnidas.Models.VagaEmprego>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="d-flex">
    @foreach (var item in Model)
    {
        var fotoVaga = "default.jpg";

        @*  if (item.Foto != null)
    {
    fotoVaga = item.Foto;
    } *@

        <div class="col-3 d-flex flex-column m-3 border border-2 border-dark rounded shadow">
            <div>
                <img src="~/img/@fotoVaga" class="h-100 w-100 border-bottom border-2 border-dark" />
            </div>
            <div>
                <p class="fw-bold">Cargo:</p>
                <p>@item.Cargo</p>
                <p class="fw-bold">Resumo:</p>
                <p>@item.ResumoVaga</p>
                <p class="fw-bold">Descrição:</p>
                <p>@item.DescricaoVaga</p>
            </div>
            <div class="d-flex justify-content-end mt-auto">
                <form method="post" asp-action="Create" asp-controller="CandidatoVagas" class="col-6">
                    <input type="hidden" name="IdVaga" value="@item.IdVagaEmprego" />

                    <button type="submit" class="btn btn-success rounded-0 col-12">Candidatar</button>
                </form>
                <form class="col-6">
                    <button asp-action="Details" asp-route-id="@item.IdVagaEmprego" class="btn btn-info text-white rounded-0 col-12">Informações</button>
                </form>
            </div>
        </div>
    }
</div>