@model IEnumerable<WebSiteVozesUnidas.Models.Noticia>
@{
    ViewData["Title"] = "Index";
}

<h1 class="fw-bold justify-content-center d-flex">Principais Notícias</h1>
<div class="col-12 d-flex">
    <div class="col-8">
        <div>
            <a asp-action="Details" asp-route-id="@ViewData["0Id"]" class="text-decoration-none" style="color: inherit;">
                <img src="~/img/@ViewData["0"]" alt="Imagem da Notícia" style="max-height:250px;border-radius:25px;" class="align-self-center w-100 mw-100" />
            </a>
        </div>
        <div>
            <a asp-action="Details" asp-route-id="@ViewData["1Id"]" class="text-decoration-none" style="color: inherit;">
                <img src="~/img/@ViewData["1"]" alt="Imagem da Notícia" style="max-height:250px;border-radius:25px;" class="align-self-center w-100 mw-100" />
            </a>
        </div>
    </div>
    <div class="col-4 justify-content-center align-items-center d-flex">
        <a asp-action="Details" asp-route-id="@ViewData["2Id"]" class="text-decoration-none" style="color: inherit;">
            <img src="~/img/@ViewData["2"]" alt="Imagem da Notícia" style="max-height:250px;border-radius:25px;" class="align-self-center w-100 mw-100" />
        </a>
    </div>
</div>
@foreach (var item in Model)
{
    <a asp-action="Details" asp-route-id="@item.IdNoticia" class="text-decoration-none" style="color: inherit;">
        <div class="d-flex ME col-12 m-2 my-4">
            <div class=" col-4 d-flex align-content-center justify-content-center mx-2">
                <img src="~/img/@item.Imagem" alt="Imagem da Notícia" style="max-height:250px;border-radius:25px;" class="align-self-center w-100 mw-100" />
            </div>
            <div class="d-flex flex-column m-1 col-8 ps-1">
                <div class="me-2 fw-bold my-3 h3 h-25">
                    @Html.DisplayFor(modelItem => item.Titulo)
                </div>
                <div class="fw-lighter h5 pe-5" style="color:gray">
                    @Html.DisplayFor(modelItem => item.Resumo)
                </div>
            </div>
        </div>
    </a>

}
