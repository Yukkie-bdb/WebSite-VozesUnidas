@model IEnumerable<WebSiteVozesUnidas.Models.Noticia>
@{
    ViewData["Title"] = "Index";
    if (ViewBag.UserJorn is null)
    {
        ViewBag.UserJorn = false;
    }
    if (ViewBag.UserId is null)
    {
        ViewBag.UserId = 0;
    }
}

<h1 class="fw-bold justify-content-center d-flex my-4">Principais Notícias</h1>
<div class="col-12 d-flex" style="background-image:url(/img/gettyimages-1299146426-612x612.jpg)">
    <div class="col-8 me-3">
        <div class="mb-3" style="background-image:url(/img/gettyimages-1299146426-612x612.jpg)">
            <a asp-action="Details" asp-route-id="@ViewData["0Id"]" class="text-decoration-none" style="color: inherit;">
                <img src="~/img/@ViewData["0"]" alt="Imagem da Notícia" style="max-height:250px;border-radius:25px;" class="align-self-center w-100 mw-100" />
            </a>
        </div>
        <div class="mt-3" style="background-image:url(/img/gettyimages-1299146426-612x612.jpg)">
            <a asp-action="Details" asp-route-id="@ViewData["1Id"]" class="text-decoration-none" style="color: inherit;">
                <img src="~/img/@ViewData["1"]" alt="Imagem da Notícia" style="max-height:250px;border-radius:25px;" class="align-self-center w-100 mw-100" />
            </a>
        </div>
    </div>
    <div class="col-4 justify-content-center align-items-center d-flex mh-100" style="background-image:url(/img/gettyimages-1299146426-612x612.jpg)">
        <a asp-action="Details" asp-route-id="@ViewData["2Id"]" class="text-decoration-none" style="color: inherit;">
            <img src="~/img/@ViewData["2"]" alt="Imagem da Notícia" style="border-radius:25px;" class="align-self-center mw-100 h-100" />
        </a>
    </div>
</div>
@if (ViewBag.userJorn == true)
{
    <div class="h1 fw-bold mt-3">Suas Notícias</div>

}
@foreach(var item in Model)
{
    if(item.IdUsuario.ToString() == ViewBag.userId.ToString())
    {
        <a asp-action="Details" asp-route-id="@item.IdNoticia" class="text-decoration-none" style="color: inherit;">
            <div class="d-flex ME col-12 m-2 my-4">
                <div class=" col-4 d-flex align-content-center justify-content-center mx-2">
                    <img src="~/img/@item.Imagem" alt="Imagem da Notícia" style="max-height:250px;border-radius:25px;" class="align-self-center w-100 mw-100" />
                </div>
                <div class="d-flex flex-column m-1 col-8 ps-1">
                    <div class="me-2 fw-bold my-3 h3 h-25">
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </div>
                    <div class="fw-lighter h5 pe-5" style="color:gray">
                        @Html.DisplayFor(modelItem => item.Resumo)
                    </div>
                </div>
            </div>
        </a>
    }
}
@if (ViewBag.userJorn == true)
{
    <p class="mb-5 mx-3">
        <a asp-action="Create" class="text-decoration-none text-white btn w-100 py-4" style="background-color:#33C500;border-radius:25px;opacity:50%;">+ Adicionar Notícia</a>
    </p>

    <div class="h1 fw-bold">Mais Notícias</div>

}
@foreach (var item in Model)
{
    if (item.IdUsuario.ToString() != ViewBag.userId.ToString())
    {
        <a asp-action="Details" asp-route-id="@item.IdNoticia" class="text-decoration-none" style="color: inherit;">
            <div class="d-flex ME col-12 m-2 my-4">
                <div class=" col-4 d-flex align-content-center justify-content-center mx-2">
                    <img src="~/img/@item.Imagem" alt="Imagem da Notícia" style="max-height:250px;border-radius:25px;" class="align-self-center w-100 mw-100" />
                </div>
                <div class="d-flex flex-column m-1 col-8 ps-1">
                    <div class="me-2 fw-bold my-3 h3 h-25">
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </div>
                    <div class="fw-lighter h5 pe-5" style="color:gray">
                        @Html.DisplayFor(modelItem => item.Resumo)
                    </div>
                </div>
            </div>
        </a>
    }
}
