@model WebSiteVozesUnidas.Models.MaterialDidatico

@{
    ViewData["Title"] = "Detalhes";
}

<h2 style="text-align:center; margin-top:10px">Detalhes do Material Didático</h2>

<hr />

<div class="cartao" style="display:flex; margin-bottom: 50px; justify-content:center; flex-direction:column">
    <div style="display:flex; justify-content:center">
        <img src="~/img/@Model.ImgMaterial" alt="Imagem" style="max-width: 300px; height: 200px;" />
        <div class="malala" style="margin-top: 50px; padding-left:50px">
            <h3 style="max-width:800px">@Html.DisplayFor(modelItem => Model.Titulo)</h3>
            <p style="max-width: 680px">@Html.DisplayFor(modelItem => Model.Descricao)</p>
        </div>
    </div>
    <div class="d-flex justify-content-center" style="margin-top:20px; max-width:1480px">
        <a data-bs-toggle="modal" data-bs-target="#ModalTrash" class="btn" style="background-color:red; width:23%; height: 40px; display: flex; align-items: center; justify-content: center; text-decoration: none; color: white;">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-trash" viewBox="0 0 16 16">
                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
            </svg>
        </a>
        <a asp-action="Edit" asp-route-id="@Model?.IdMaterialDidatico" class="btn" style=" background-color:dodgerblue; width:23%; height: 40px; display: flex; align-items: center; justify-content: center; text-decoration: none; color: white;">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
            </svg>
        </a>
        <a asp-action="Index" class="btn" style="background-color:green; width:23%; height: 40px; display: flex; align-items: center; justify-content: center; text-decoration: none; color: white;">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-arrow-90deg-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M1.146 4.854a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 4H12.5A2.5 2.5 0 0 1 15 6.5v8a.5.5 0 0 1-1 0v-8A1.5 1.5 0 0 0 12.5 5H2.707l3.147 3.146a.5.5 0 1 1-.708.708z" />
            </svg>
        </a>
    </div>

</div>


<div class="modal fade" id="ModalTrash" data-bs-keyboard="false" aria-labelledby="staticBackdropLabel" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center border-0">
                <p class="text-dark fs-3 fst-normal">Tem certeza que deseja apagar esse material didático?</p>
            </div>
            <div class="modal-footer d-flex flex-column justify-content-center border-0">
                <form asp-action="Delete" asp-route-id="@Model?.IdMaterialDidatico">
                    <input type="hidden" asp-route-id="@Model?.IdMaterialDidatico" />
                    <button type="submit" style="background-color:red" class="btn apag text-white">Deletar</button>
                </form>
                <button data-bs-dismiss="modal" class="btn volt2">Cancelar</button>
            </div>
        </div>
    </div>
</div>