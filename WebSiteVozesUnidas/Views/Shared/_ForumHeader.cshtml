@using WebSiteVozesUnidas.ViewModels

<header class="sticky-top">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:#6B7280">
        <div class="container-fluid text-white justify-content-center">

            <div class="col-3">

            </div>

            <div class="col-6 text-center">
                <a asp-action="Index" asp-controller="Noticias" class="text-decoration-none text-white"><h1>Vozes Unidas</h1></a>
            </div>


            <div class="d-flex justify-content-between col-3 align-items-center">

                <form asp-action="Index" asp-controller="VagaEmpregos">
                    <div class="input-group">
                        <input type="search" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="search-button" name="searchTitle">
                        <button class="btn btn-primary" type="submit" id="search-button">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                            </svg>
                        </button>
                    </div>
                </form>


                <!-- Button trigger modal -->
                <button type="button" class="btn bg-white me-4" data-bs-toggle="modal" data-bs-target="#filtroModal">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5" />
                    </svg>
                </button>

            </div>

        </div>

    </nav>
</header>

<!-- Modal -->
<div class="modal fade" id="filtroModal" tabindex="-1" aria-labelledby="filtroModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="filtroModalLabel">Filtro para vagas de emprego</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body ">
                <a class="nav-link mb-0 h5 hover-dark-underline" asp-area="" asp-controller="CategoriaPosts" asp-action="Index">Adicionar Categoria</a>
            </div>
            <div class="modal-footer">
                
            </div>
        </div>
    </div>
</div>