<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/LOGO.png" style="height:42px; width:42px;" alt="Logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex w-100">

                    <div class="col-7 offset-1">
                        <ul class="navbar-nav d-flex justify-content-start w-100">
                            <li class="nav-item">
                                <a class="nav-link mb-0 h5 hover-dark-underline" asp-area="" asp-controller="Noticias" asp-action="Index">Notícias</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link mb-0 h5 hover-dark-underline" asp-area="" asp-controller="Especialista" asp-action="index">Aconselhamentos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link mb-0 h5 hover-dark-underline" asp-area="" asp-controller="MaterialDidatico" asp-action="index">Materiais</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link mb-0 h5 hover-dark-underline" asp-area="" asp-controller="VagaEmpregos" asp-action="Index">Empregos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link mb-0 h5 hover-dark-underline" asp-area="" asp-controller="Posts" asp-action="Index">Fórum</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link mb-0 h5 hover-dark-underline" asp-area="" asp-controller="Home" asp-action="Privacy">Sobre</a>
                            </li>
                        </ul>

                    </div>

                    <div class="d-flex col justify-content-center">
                        <partial name="_LoginPartial" />
                    </div>

                </div>
            </div>

        </nav>
    </header>

    @{
        // Renderiza o header adicional, se especificado
        var customHeader = ViewData["CustomHeader"] as string;
        if (!string.IsNullOrEmpty(customHeader))
        {
            Html.RenderPartial($"~/Views/Shared/_{customHeader}.cshtml");

        }
    }

