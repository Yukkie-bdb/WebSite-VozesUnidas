                                <a class="nav-link mb-0 h5 hover-dark-underline" asp-area="" asp-controller="MaterialDidatico" asp-action="index">Materiais</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link mb-0 h5 hover-dark-underline" asp-area="" asp-controller="VagaEmpregos" asp-action="Index">Empregos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link mb-0 h5 hover-dark-underline" asp-area="" asp-controller="Posts" asp-action="Index">Fórum</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link mb-0 h5 hover-dark-underline" asp-area="" asp-controller="Home" asp-action="Privacy">Sobre</a>
                            </li>
                        </ul>
                    </div>

                    <div class="d-flex col-lg justify-content-end justify-content-lg-center">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>

        <!-- Sidebar -->
        <div class="offcanvas offcanvas-start" tabindex="-1" id="sideMenu" aria-labelledby="sideMenuLabel">
            <div class="offcanvas-header">
                <h5 id="sideMenuLabel">Páginas</h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
           
            <hr class="m-0" />

            <div class="offcanvas-body">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link mb-0 h5 hover-dark-underline text-secondary" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mb-0 h5 hover-dark-underline text-secondary" asp-area="" asp-controller="Noticias" asp-action="Index">Notícias</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mb-0 h5 hover-dark-underline text-secondary" asp-area="" asp-controller="Especialista" asp-action="index">Aconselhamentos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mb-0 h5 hover-dark-underline text-secondary" asp-area="" asp-controller="MaterialDidatico" asp-action="index">Materiais</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mb-0 h5 hover-dark-underline text-secondary" asp-area="" asp-controller="VagaEmpregos" asp-action="Index">Empregos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mb-0 h5 hover-dark-underline text-secondary" asp-area="" asp-controller="Posts" asp-action="Index">Fórum</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mb-0 h5 hover-dark-underline text-secondary" asp-area="" asp-controller="Home" asp-action="Privacy">Sobre</a>
                    </li>
                </ul>
            </div>

            <hr />

            <div class="d-flex col-12 justify-content-center">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </header>

    <!-- CSS -->
    <style>
        /* Estilo para a sidebar, cobrindo 75% da tela */
        .offcanvas-start {
            width: 75%;
        }
    </style>




    @{
        // Renderiza o header adicional, se especificado
        var customHeader = ViewData["CustomHeader"] as string;
        if (!string.IsNullOrEmpty(customHeader))
        {
            Html.RenderPartial($"~/Views/Shared/_{customHeader}.cshtml");

