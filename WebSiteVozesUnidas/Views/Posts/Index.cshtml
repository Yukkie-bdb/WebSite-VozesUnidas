@model IEnumerable<WebSiteVozesUnidas.Models.Post>

@{
    ViewData["Title"] = "Fórum";
    ViewData["Color"] = "bg-secondary";
    ViewData["Controller"] = "Posts";
}

<div class="col-12 d-flex">
    <div class="col-12">
        <div class="d-flex">
            <form asp-action="IndexPost" class="d-flex justify-content-between gap-2 col-12">

                <div class="d-flex col-8 gap-2">

                    <div class="form-floating mb-3 col">
                        <input type="text" class="form-control" id="floatingInput" placeholder="Buscar entre posts" name="titulo">
                        <label for="floatingInput">Buscar entre posts</label>
                    </div>

                    <div class="form-floating mb-3 col">
                        <select class="form-select" id="floatingSelect" name="id">
                            <option value="">Selecione uma categoria</option>
                            @foreach (var categoria in ViewBag.Categorias)
                            {
                                <option value="@categoria.IdCategoriaPost">@categoria.Nome</option>
                            }
                        </select>
                        <label for="floatingSelect">Categorias</label>
                    </div>
                </div>

                <div class="col-3 flex-grow-1 mb-3">
                    <button class="btn btn-primary col-12 h-100">Pesquisar</button>
                </div>
            </form>

        </div>
        <div class="mb-3">
            <a asp-action="Create" class="text-decoration-none text-black btn w-100 py-3 border-1 border-dark" style="font-size:20px;">Adicionar novo post</a>
        </div>
        @foreach (var item in Model)
        {

            @if (item.Imagem != null)
            {
                <a asp-action="Details" asp-route-id="@item.IdPost" class="text-decoration-none text-black">
                    <div class="d-flex p-2 border border-1 border-dark border my-5 " style="border-radius:5px">
                        <div class="d-flex flex-column col-12 p-2">
                            <h3 class="fw-bold">
                                @item.Titulo
                            </h3>
                            <p>
                                @item.SubTituloResumo
                            </p>
                            <img src="~/img/@item.Imagem" alt="Imagem do Post" class="align-self-center col-8" style="max-height:350px" />
                        </div>
 
                    </div>
                </a>


            }
            else
            {
                <a asp-action="Details" asp-route-id="@item.IdPost" class="text-decoration-none text-black">
                    <div class="d-flex p-2 border border-1 border-dark border my-5 " style="border-radius:5px">
                        <div class="d-flex flex-column col-12 p-2">
                            <h3 class="fw-bold">
                                @item.Titulo
                            </h3>
                            <p>
                                @item.SubTituloResumo
                            </p>
                        </div>

                    </div>
                </a>

            }



        }

        @if (Model.Count() == 0)
        {
            <div class="card col p-3 border justify-content-center text-black text-decoration-none me-3 my-5">

                <div class="d-flex col-12 justify-content-center">


                    <div class="card-body col-12 p-0 d-flex flex-column justify-content-center">

                        <h3 class="card-title text-center text-uppercase fw-light">Nenhum post feito ainda, seja o primeiro!</h3>


                    </div>
                </div>

            </div>
        }

    </div>
